upstream renderer-server  {
  server renderer_1:3000;
  server renderer_2:3000;
  server renderer_3:3000;
}

server {
    listen 80;
    server_name proxy;

    location / {
			proxy_hide_header Content-Type;		
    	set $prerender 1;

			if ($arg_url ~* '\.css') {
				set $prerender 0;
			}
		
			# Servidor de DNS
			resolver 192.168.4.9;
    
			if ($prerender = 1) {
				# add_header Content-Type "text/html";
				set $prerender "renderer-server";
				proxy_pass http://$prerender/$arg_url;
			}
		
			if ($prerender = 0) {
				add_header Content-Type "text/css";
				# Vamos a la url que nos pasan como parametro directamente
				proxy_pass $arg_url;
			}

		}
 
}

server {
    listen 443 ssl;
    server_name proxy;
    
    #ssl on;
    ssl_certificate /etc/nginx/ssl/server.crt;
    ssl_certificate_key /etc/nginx/ssl/server.key;

    location / {
			proxy_hide_header Content-Type;
    	set $prerender 1;
		
			if ($request_uri ~* '.\css') {
				set $prerender 0;
			}
			
			# Servidor de DNS
			resolver 192.168.4.9;
    
			if ($prerender = 1) {
				# add_header Content-Type "text/html";
				set $prerender "renderer-server";
				rewrite .* /https://$host$request_uri? break;
				proxy_pass http://$prerender;
			}
		
			if ($prerender = 0) {
				add_header Content-Type "text/css";
				# Vamos a la url que nos pasan como parametro directamente
				proxy_pass https://$host$request_uri?;
			
      }
    }
 
}
