<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.datasource">java:comp/env/jdbc/oaw</property>
        <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="show_sql">false</property>
        <property name="hbm2ddl.auto">update</property>

        <mapping class="es.inteco.multilanguage.persistence.Analysis"/>
        <mapping class="es.inteco.multilanguage.persistence.Language"/>
        <mapping class="es.inteco.multilanguage.persistence.LanguageFound"/>
        <mapping class="es.inteco.multilanguage.persistence.Observatory"/>
        <mapping class="es.inteco.multilanguage.persistence.Category"/>
        <mapping class="es.inteco.multilanguage.persistence.Site"/>
        <mapping class="es.inteco.multilanguage.persistence.Page"/>
        <mapping class="es.inteco.multilanguage.persistence.Results"/>
        <mapping class="es.inteco.multilanguage.persistence.PageResult"/>
    </session-factory>
</hibernate-configuration>